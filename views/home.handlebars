<h1>Bughouse!</h1>
<div class="row">
	<div class="col-md-6">
		<h2>Join a current game</h2>
		<ul>
			{{#each sessions }}
				<li>
					<a href="/session/{{name}}">
						{{ name }}
					</a>
				</li>
			{{else}}
				<p>No games created</p>
			{{/each}}
		</ul>
	</div>
	<div class="col-md-6">
		<h2>Start a new game</h2>
		<form class="form-inline" action="/session" method="POST">
			<div class="form-group">
				<label class="sr-only" for="newSessionName">Session Name</label>
				<div class="input-group">
					<input type="text" class="form-control" name="newSessionName" placeholder="Session name" required>
					<span class="input-group-btn">
						<button type="submit" class="btn btn-primary">Start</button>
					</span>
				</div>
			</div>
		</form>
	</div>
</div>
