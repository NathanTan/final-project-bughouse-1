{{> header}}

<h2>Welcome to session: {{ name }}</h2>
<div id="root" class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-body">
                
                <div id="board1Black">
                    <input type="text" class="form-control player-name" name="player-name" data-position="board1Black" placeholder="No player">
                    <div class="player-turn"></div>
                </div>
                
                <div id="board1"></div>

                <div id="board1White">
                    <input type="text" class="form-control player-name" name="player-name" data-position="board1White" placeholder="No player">
                    <div class="player-turn"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-body">
                
                <div id="board2White">
                    <input type="text" class="form-control player-name" name="player-name" data-position="board2White" placeholder="No player">
                    <div class="player-turn"></div>
                </div>

                <div id="board2"></div>

                <div id="board2Black">
                    <input type="text" class="form-control player-name" name="player-name" data-position="board2Black" placeholder="No player">
                    <div class="player-turn"></div>
                </div>
            </div>
        </div>
    </div>
</div>


<link rel="stylesheet" href="/chessboardjs-0.3.0/css/chessboard-0.3.0.css">
<link rel="stylesheet" href="/css/site.css">

<script src="/lib/jquery/dist/jquery.js"></script>
<script src="/chessboardjs-0.3.0/js/chessboard-0.3.0.js"></script>
<script src="/lib/chess.js/chess.js"></script>
<script src="/lib/socket.io-client/dist/socket.io.js"></script>
<script src="/lib/react/dist/react.js"></script>
<script src="/lib/react-dom/dist/react-dom.js"></script>
<script src="/js/client/index.js"></script>
<script>
    initSession("/{{name}}");
</script>
